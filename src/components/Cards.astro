---
import Card from "./Card.astro";
import type { Props as CardProp } from "./Card.astro";

interface Props {
  details: CardProp[];
}

const { details } = Astro.props;
---

<div class="cards">
  {details.map((detail) => <Card {...detail} />)}
</div>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media screen and (min-width: 768px) {
    .cards {
      flex-direction: row;
    }
  }
</style>
